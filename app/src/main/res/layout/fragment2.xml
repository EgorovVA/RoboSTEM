<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BlankFragment2"
    android:background="#FFFFFF">
    <FrameLayout
        android:layout_width="411dp"
        android:layout_height="750dp"
        android:background="@drawable/grad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="254dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="150dp"
            android:text="Наведите камеру на QR код"
            android:textColor="#303F9F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="300dp"
            android:text="Найден файл:"
            android:textColor="#303F9F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Link"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginTop="350dp"
            android:background="#FFFFFF"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:hapticFeedbackEnabled="false"
            android:hint="Адрес файла"
            android:inputType="textPersonName"
            android:lineSpacingExtra="8sp"
            android:minHeight="48dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textColor="#000000"
            android:textColorHint="#434343"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button5"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="400dp"
            android:backgroundTint="#303F9F"
            android:text="Скачать"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/button9"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="#303F9F"
            android:text="Сканировать" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="211dp"
        android:layout_height="211dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/try4" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:layout_marginStart="350dp"
        android:src="@android:drawable/ic_menu_revert"
        tools:ignore="SpeakableTextPresentCheck" />
</FrameLayout>